<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
    
    <style name="MyTablayou" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="classify_item_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_180</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="classify_item_iv">
        <item name="android:layout_width">@dimen/dp_40</item>
        <item name="android:layout_height">@dimen/dp_40</item>
    </style>

    <style name="classify_item_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:layout_marginTop">@dimen/dp_05</item>
    </style>

</resources>
